募集管理ページ
<% @recruitments.each do |recruitment| %>
  <% agreement = Agreement.where(recruitment_id: recruitment.id, agreement_flag: 1) %>
  <div>
    <%= link_to recruitment_path(recruitment.id) do %>
      <%= recruitment.title %>
    <% end %>
  </div>
  <div>
    <%= link_to user_path(recruitment.user.id) do %>
      <%= recruitment.user.nickname %>
    <% end %>
  </div>
  <div>
    開催日時：
    <%= recruitment.event_date %>
    <%= recruitment.start_time.name %>
    -
    <%= recruitment.end_time.name %>
  </div>
  <div>
    場所：
    <%= recruitment.prefecture.name %>
    >
    <%= recruitment.ball_park %>
  </div>
  <div>
    募集の種類：
    <%= recruitment.category.category_name %>
  </div>
  <div>
    レベル：
    <%= recruitment.level.name %>
  </div>
  <%# 募集に紐づく応募情報取得 %>
  <% applies = Apply.where(recruitment_id: recruitment.id) %>
  <% applies.each do |apply| %>
    <div>
      <%= link_to new_apply_agreement_path(apply.id) do %>
        <div>
          応募者：
          <%= apply.user.nickname %>
        </div>
          <%# recruitment_idが募集に紐づくメッセージルームを取得 %>
          <% message_room = MessageRoom.find_by(recruitment_id: apply.recruitment.id) %>
          <%# メッセージルームを特定 %>
          <%# <% entry = Entry.where(user_id: current_user.id, user_id: apply.user.id).where(message_room_id: message_rooms.ids) %>
          <%# <% message = Message.where(user_id: current_user.id).or(Message.where(user_id: apply.user.id)).where(message_room_id: entries.message_room.id).order(updated_at: :desc).limit(1).take %>
          <% my_message = Message.where(user_id: current_user.id, message_room_id: message_room.id).last %>
          <% applier_message = Message.where(user_id: apply.user.id, message_room_id: message_room.id).last %>
        <div>
          <% if my_message.user.id == current_user.id %>
            あなた
          <% else %>
            <%= message.user.nickname %>
          <% end %>
          <div>
            <%= my_message.text %>
          </div>
          <div>
            <%= applier_message.text %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>