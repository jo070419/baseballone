応募詳細ページ
<div>
  <%= @apply.recruitment.title %>
</div>
<div>
  <%= link_to @apply.recruitment.user.nickname, user_path(@apply.recruitment.user.id) %>
</div>
<div>
  開催日時：
  <%= @apply.recruitment.event_date %>
  <%= @apply.recruitment.start_time.name %>
  -
  <%= @apply.recruitment.end_time.name %>
</div>
<div>
  場所：
  <%= @apply.recruitment.prefecture.name %>
  >
  <%= @apply.recruitment.ball_park %>
</div>
<div>
  募集の種類：
  <%= @apply.recruitment.category.category_name %>
</div>
<div>
  レベル：
  <%= @apply.recruitment.level.name %>
</div>
<%= form_with model: @message, url: apply_show_message_apply_messages_path(@apply.id), local: true do |f| %>
  <%= f.text_area :text, placeholder: "500字以内" %>
  <%= f.submit "応募メッセージを送信する" %>
<% end %>
<% @messages.each do |message| %>
  <div>
    <% if message.user.id == current_user.id %>
      あなた
    <% else %>
      <%= message.user.name %>
    <% end %>
  </div>
  <div>
    <%= message.text %>
  </div>
<% end %>
<%= link_to "戻る", applies_path %>