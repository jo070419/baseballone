<div class="main_content">
  <div class="sign_up">
    <h2>ログイン</h2>
    <p class="alert"><%= alert %></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_form" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "input_form" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: :form__btn %>
      </div>
    <% end %>
  </div>
</div>
